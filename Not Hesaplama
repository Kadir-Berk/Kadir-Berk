#include <stdio.h>
#include <stdlib.h>
int i;
int j;
float notlar[5][4];
float ortalama;
float toplam;
int main() {

    for(i = 0; i < 5; i++) {
        printf("%d. ogrencinin 4 notunu giriniz (araya bosluk koyunuz):\n", i+1);
        for(j = 0; j < 4; j++) {
            scanf("%f", &notlar[i][j]);
            if(notlar[i][j] > 100) {
                printf("notunuz 100 den buyuk olamaz tekrar giriniz(araya bosluk koyunuz): ");
                scanf("%f", &notlar[i][j]);
            }
        }
    }
    for(i = 0; i < 5; i++) {
        toplam = 0;
        for(j = 0; j < 4; j++) {
            toplam += notlar[i][j];
        }
    ortalama = toplam / 4;

        printf("%d. ogrencinin ortalamasi: %f - ", i+1, ortalama);
        if(ortalama >= 50)
            printf("Gectiniz bravo√¶\n");
        else
            printf("Too bad kaldiniz \n");
    }

}
